<div class="row">
  <div class="col s3">
    <%= render :partial => "products/bar" %>
  </div>

  <div class="col s9">
    <div class="col l12">
      <% @products.each do |category, products| %>
        <% products.each do |product| %>
        <div class="col l4">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <% if product.default_image %>
                <%= image_tag product.default_image.path, :width => '60px', :height => "200px" %>
              <% end %>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= product.sku %><i class="material-icons right">more_vert</i></span>
              <p><a href="#"><%= link_to product.name, product_path(product.permalink) %></a></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= link_to product.name, product_path(product.permalink) %><i class="material-icons right">close</i></span>
              <h5><%= product.sku %></h5>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
    <ul class="pagination center-align">
       <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
       <li class="active"><a href="#!">1</a></li>
       <li class="waves-effect"><a href="#!">2</a></li>
       <li class="waves-effect"><a href="#!">3</a></li>
       <li class="waves-effect"><a href="#!">4</a></li>
       <li class="waves-effect"><a href="#!">5</a></li>
       <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
     </ul>
  </div>

</div>
